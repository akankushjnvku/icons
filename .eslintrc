{
  "extends": ["@transferwise"],
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "react/prop-types": [0]
  },
  "ignorePatterns": [
    "build/**/*",
    "lib/**/*",
    "pages/**/*",
    "src-demo/**/*",
    "*.d.ts",
    "public/**/*",
    "next.config.js",
    "postcss.config.js"
  ]
}
